---
const { title, text, buttonText = "kontakt", backgroundImage = "/images/contactHero.jpeg" } = Astro.props;
---

<section class="relative bg-gray-100 py-24 px-6 mx-auto">
  <!-- Bakgrundsbild -->
  <div 
    class="absolute inset-0 z-0 bg-cover bg-center opacity-45 bg-position-[center_top_10%] bg-no-repeat" 
    style={`background-image: url('${backgroundImage}')`}>
</div>

  <!-- InnehÃ¥ll -->
  <div class="relative z-10 w-[25%] text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 uppercase">
      {title}
    </h1>
    <p class="mt-4 text-xl text-gray-800 font-bold">
      {text}
    </p>
    <a
      href="/kontakt"
      class="uppercase mt-6 inline-block bg-amber-100 text-amber-400 px-6 py-3 rounded-lg hover:bg-amber-400 transition"
    >
      {buttonText}
    </a>
  </div>
</section>